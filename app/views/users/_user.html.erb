<% form_for @user do |form| %>
<%= form.error_messages %>
<table style="text-align: left; width: 20%;" border="0" cellpadding="2"
cellspacing="2" class="formList">
<tbody>
<tr>
<td style="vertical-align: top;"><%= form.label :username, "Username" %>
</td>
<td style="vertical-align: top;"> <%= form.text_field :username %>
</td>
</tr>
<tr>
<td style="vertical-align: top;"><%= form.label :email, "Email" %>
</td>
<td style="vertical-align: top;"><%= form.text_field :email %>
</td>
</tr>
<tr>
<td style="vertical-align: top;"><%= form.label :password, "Password" %>
</td>
<td style="vertical-align: top;"> <%= form.password_field :password %>
</td>
</tr>
<tr>
<td style="vertical-align: top;"><%= form.label :password_confirmation, "Password confirmation" %>
</td>
<td style="vertical-align: top;"> <%= form.password_field :password_confirmation %>
</td>
</tr>
<tr>
<td style="vertical-align: top;"><%= form.label :roles, "Roles" %>
</td>
<td style="vertical-align: top;"> <%= form.select :roles,["Admin","User","Guest"] %>
</td>
</tr>
<tr>
<td style="vertical-align: top;">&nbsp;
</td>
<td style="vertical-align: top;" align="center"> <%= form.submit "Submit" %>
</td>
</tr>
</tbody>
</table>

<% end %>

